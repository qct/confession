<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <!-- Le styles -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/bootstrap-responsive.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script type="text/javascript" src="/javascript/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/javascript/main.js"></script>


    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="/javascript/html5shiv.js"></script>
    <![endif]-->
  </head>
  <body>
    <div  class="navbar navbar-fixed-top" >
      <div class="navbar-inner" style="padding-right:15px;">
        <p class="navbar-text pull-right">
            <% if(!user) { %>
              <a href="/login">登陆</a>
              &nbsp;
              <a href="/signup">注册</a>
            <% } else { %>
            欢迎您，<%= user.loginname%>
            <% if(notification){
              var noteCount=0;
              for(var i in notification){
                noteCount+=notification[i].count;
              }
             %>
            [<%=noteCount%>]
            <% }%>
            &nbsp;
            <a href="/logout">注销</a>
            <%}%>
        </p>
      </div>
    </div>
    <div class="container-narrow">
      <div>
        <ul class="nav nav-pills pull-right">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Contact</a></li>
        </ul>
        <h3 class="muted"><%= title%></h3>
      </div>

      <hr>
      <div class="row">
        <div class="span7  well-small">
          <form action="/create" method="post" accept-charset="utf-8" onsubmit="return checkUser()">
            <textarea name="content" class="input-xlarge span7" id="textarea" rows="3"></textarea>
            <%
              var loginname;
              if(user) loginname = user.loginname;
            %>
            <input id="user_loginname" type="hidden" name="user" value="<%= loginname%>" >
            <input type="submit" class="btn  btn-primary" value="我忏悔!">
          </form>
        </div>

        <% posts.forEach( function( post ){ %>
        <div class="span7 well well-small">
          <div class="span6 left-margin2"><a href="/p/<%= post.id %>" postid="<%= post.id %>" class="post">{<%= post.id %>}</a></div>
          <div id="content" class="span6 left-margin10">
           
            <%- post.content %>
          </div>
          <!-- <hr> -->
          <div class="span6 left-margin10">
            <ul class="unstyled inline left-padding0">
              <li><a href="javascript:void(0);">顶</a></li>
              <li><a href="javascript:void(0);">踩</a></li>
              
              <li><a href="javascript:void(0);">删</a></li>
              <li><a href="javascript:void(0);comment.send(<%=post.id%>)">评</a></li>
              <li class="pull-right font-grey" ><%= (post.author == undefined? '' : post.author)%> 发表于 <%= post.update_at_str %></li>
            </ul>
          </div>
          <div class="span6 left-margin10" style="display:none;" id="cc_<%=post.id%>">
            <div class="span6 left-margin10">
              <textarea name="comment" class="input-xlarge span6" id="commentArea_<%=post.id%>" rows="1"></textarea>
              <a href="javascript:void(0);comment.active(<%=post.id%>)" class="btn pull-right btn-primary" >评论</a>        
            </div>

            <div class="span6 left-margin10" id="comment_<%=post.id%>">
             
            </div>
          </div>
        </div>
        <!-- <div class="span4">
          <span>
            <a href="/edit/<%= post._id %>" title="Update this post item" class="btn btn-mini btn-primary">Edit</a>
          <span>
          <span>
            <a href="/destroy/<%= post._id %>" title="Delete this post item" class="btn btn-mini btn-primary">Delete</a>
          </span>
        </div> -->
        <% }); %>

        </div>
      <hr>

      <div class="footer">
        <p>&copy; Copyright 2013 Rosegun</p>
      </div>
      </div>

    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="/javascript/jquery-1.9.1.min.js"></script>
    <script type="text/javascript" src="/javascript/bootstrap.min.js"></script>
    <script type="text/javascript">
      function checkUser() {
        if(!<%= user%>) {
          alert('请先登录，再忏悔！');
          return false;
        }else {
        }
      }
    </script>
  </body> 
</html>