        </form>

        <% posts.forEach( function( post ){ %>
          <p><%= post.content %> | <%= post.updated_at_str %></p>
          <% if( post._id == current ){ %>
            <form action="/update/<%= post._id %>" method="post" accept-charset="utf-8">
              <input type="text" name="content" value="<%= post.content %>" />
              <input type="submit" value="提交" class="btn  btn-primary">
            </form>
          <% }else{ %>
            <a href="/edit/<%= post._id %>" title="Update this post item" class="btn btn-mini btn-primary"><%= post.content %></a>
          <% } %>
